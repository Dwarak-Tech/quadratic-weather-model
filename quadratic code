import java.util.Scanner;

public class QuadraticWeatherModel {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Quadratic Weather Model");
        System.out.println("Enter the coefficients for the quadratic equation (ax^2 + bx + c = 0):");

        try {
            System.out.print("Enter a: ");
            double a = scanner.nextDouble();

            System.out.print("Enter b: ");
            double b = scanner.nextDouble();

            System.out.print("Enter c: ");
            double c = scanner.nextDouble();

            double[] roots = solveQuadratic(a, b, c);

            System.out.printf("Equation: %.2fx^2 + %.2fx + %.2f = 0%n", a, b, c);
            System.out.printf("Root 1: %.2f%n", roots[0]);
            System.out.printf("Root 2: %.2f%n", roots[1]);

        } catch (java.util.InputMismatchException e) {
            System.out.println("Invalid input. Please enter numeric values.");
        } finally {
            scanner.close();
        }
    }

    public static double[] solveQuadratic(double a, double b, double c) {
        double delta = (b * b) - 4 * (a * c);
        double[] roots = new double[2];

        if (delta >= 0) {
            roots[0] = (-b - Math.sqrt(delta)) / (2 * a);
            roots[1] = (-b + Math.sqrt(delta)) / (2 * a);
        } else {
            // Complex roots
            double realPart = -b / (2 * a);
            double imaginaryPart = Math.sqrt(-delta) / (2 * a);
            roots[0] = realPart; //For simplicity, storing only real part for complex roots.
            roots[1] = imaginaryPart; //Storing imaginary part in roots[1]
            System.out.println("Complex roots found. Displaying real and imaginary parts separately.");
        }

        return roots;
    }
}
